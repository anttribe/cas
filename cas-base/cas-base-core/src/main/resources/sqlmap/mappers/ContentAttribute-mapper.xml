	<!-- delete: 删除单条数据 -->
	<delete id="delete" parameterType="org.anttribe.cas.base.core.entity.ContentAttribute">
	    <![CDATA[
            DELETE FROM cas_t_core_content_attr
        ]]>
		<include refid="where-no-alias"></include>
	</delete>

	<!-- queryAll: 查询所有数据 -->
	<select id="queryAll" resultMap="ContentAttr-resultMap">
		<include refid="select"></include>
		<include refid="orderBy"></include>
	</select>


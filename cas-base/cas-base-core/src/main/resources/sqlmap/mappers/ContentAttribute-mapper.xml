				<foreach collection="list" item="item">
					<if test="null != name and name != ''">
						when #{item.id} then #{name}
					</if>
				</foreach>
			</trim>
			<trim prefix="attr_value_type = case id" suffix="end,">
				<foreach collection="list" item="item">
					<if test="null != attrValueType and attrValueType != ''">
						when #{item.id} then #{attrValueType}
					</if>
				</foreach>
			</trim>
			<trim prefix="content_type = case id" suffix="end,">
				<foreach collection="list" item="item">
					<if test="null != contentType and contentType != ''">
						when #{item.id} then #{contentType}
					</if>
				</foreach>
			</trim>
		</trim>

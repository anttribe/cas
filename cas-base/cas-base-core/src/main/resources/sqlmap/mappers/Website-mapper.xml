<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.anttribe.cas.base.core.entity.Website">
	<cache readOnly="true" />
	<resultMap id="Website-resultMap" type="org.anttribe.cas.base.core.entity.Website">
		<result property="id" column="id" />
		<result property="siteName" column="site_name" />
		<result property="domain" column="domain" />
		<result property="logo" column="logo" />
		<result property="charset" column="charset" />
		<result property="userAgent" column="user_agent" />
		<result property="createTime" column="create_time" />
		<association property="category"
			javaType="org.anttribe.cas.base.core.entity.Category" column="{id=category_id}"
			select="org.anttribe.cas.base.core.entity.Category.queryById">
		</association>
	</resultMap>

	<!-- select -->
	<sql id="select">
        <![CDATA[
            SELECT t.id, t.site_name, t.domain, t.logo, t.charset, t.user_agent, t.category_id, t.create_time
              FROM cas_t_core_website t
        ]]>
	</sql>

	<!-- where -->
	<sql id="where">
		<where>
			<if test="null != id and id != ''">
				AND t.id = #{id}
			</if>
			<if test="null != siteName and siteName != ''">
				AND t.site_name LIKE CONCAT('%', '${siteName}', '%')
			</if>
			<if test="null != domain and '' != domain">
				AND t.domain = #{domain}
			</if>
			<if test="null != category and '' != category">
				AND t.category_id = #{category}
			</if>
		</where>
	</sql>
	
	<!-- insert: 插入单条数据 -->
	<insert id="insert" parameterType="org.anttribe.cas.base.core.entity.Website">
		<![CDATA[
		    INSERT INTO cas_t_core_website(id, site_name, domain, logo, charset, user_agent, category_id, create_time)
		      VALUES(#{id}, #{siteName}, #{domain}, #{logo}, #{charset}, #{userAgent}, #{category.id}, #{createTime})
		]]>
	</insert>

	<!-- queryAll: 查询所有站点数据 -->
	<select id="queryAll" resultMap="Website-resultMap">
		<include refid="select"></include>
		ORDER BY t.create_time
	</select>

	<!-- queryById: 根据id查询单条数据 -->
	<select id="queryById" resultMap="Website-resultMap">
		<include refid="select"></include>
		<include refid="where"></include>
	</select>

	<!-- queryByCriteria: 根据条件查询数据 -->
	<select id="queryByCriteria" resultMap="Website-resultMap"
		parameterType="Map">
		<include refid="select"></include>
		<include refid="where"></include>
		ORDER BY t.create_time
	</select>
</mapper>